!!(*
if (0) {
    # add specific vhosts here
    $port = 123456;
} else {
    # default to this port for this service
    $port = 3100;
}
*)!!

# serve static files directly (needed for the down.html)
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
RewriteRule /(.+) /$1 [L]

# Pass everything else to the backend app server
ProxyPass / http://127.0.0.1:!!(*= $port *)!!/ retry=4
ProxyPreserveHost On
