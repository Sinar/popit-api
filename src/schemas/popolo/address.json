{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://popoloproject.com/schemas/address.json#",
  "title": "Address",
  "description": "A physical location or a mail delivery point",
  "type": "object",
  "properties": {
    "id": {
      "description": "The address' unique identifier",
      "type": "string"
    },
    "type": {
      "description": "A type of address, e.g. 'capitol'",
      "type": "string"
    },
    "address": {
      "description": "A postal address",
      "type": "string"
    },
    "voice": {
      "description": "A voice telephone number",
      "type": "string"
    },
    "fax": {
      "description": "A facsimile telephone number",
      "type": "string"
    },
    "cell": {
      "description": "A mobile telephone number",
      "type": "string"
    },
    "tollfree": {
      "description": "A toll-free telephone number",
      "type": "string"
    },
    "video": {
      "description": "A video conferencing telephone number",
      "type": "string"
    },
    "pager": {
      "description": "A paging device telephone number",
      "type": "string"
    },
    "textphone": {
      "description": "A telecommunication device for people with hearing or speech difficulties",
      "type": "string"
    }
  }
}
